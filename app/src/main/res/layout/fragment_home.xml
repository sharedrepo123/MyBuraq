<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:auto_cycle="true"
        app:delay="1"
        app:error_image="@drawable/img1"
        app:placeholder="@drawable/img1"
        app:period="2000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/slider"
        android:background="@color/design_default_color_primary_dark" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="87dp"
        android:text="@string/HomePage_heading"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_home"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="50dp"
        android:text="Find Or Offer A Buraq Now"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:background="@android:color/holo_orange_light"
        android:padding="8dp"
        android:text="You don't have an account yet?  Help me get to my Masjid!"
        android:textSize="20sp" />

    <SearchView
        android:id="@+id/search1"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="8dp"
        android:padding="5dp"
        android:queryHint="Masjid Search" />

    <Button
        android:id="@+id/button"
        android:layout_width="149dp"
        android:layout_height="66dp"
        android:layout_below="@id/search1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="210dp"
        android:background="@color/colorPrimary"
        android:text="Find it!"
        android:textAllCaps="false"
        android:textSize="25sp" />


</RelativeLayout>